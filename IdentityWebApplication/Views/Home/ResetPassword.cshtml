@model ResetPasswordViewModel

@{
    ViewData["Title"] = "ResetPassword";
}

<h3>Reset Password</h3>
<form asp-controller="Home" asp-action="ResetPassword" method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
    <div class="row mb-3">
        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Password" type="password" class="form-control">
            <span class="text-danger" asp-validation-for="Password"></span>

        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="PasswordConfirm" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="PasswordConfirm" type="password" class="form-control">
            <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Sign in</button>
</form>